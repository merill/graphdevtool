{
    "manifest_version" : 2,

    "name" : "Graph Dev Tools",
    "description": "This extension will show the Graph REST and PowerShell commands for a given action you make in Microsoft 365 or Azure.",
    "version" : "0.1",

    "author" : "Merill Fernando",

    "devtools_page" : "html/devtools.html",

    "background": {
        "scripts": ["js/background.js"]
    },

    "browser_action": {
        "default_icon": "img/graphicon.png",
        "default_popup": "html/popup.html"
       },

    "permissions": [
        "activeTab",
        "webRequest",
        "*://*.microsoft.com/*"
      ]
}